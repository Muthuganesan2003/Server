<!DOCTYPE html>
<html lang="en">
    <%-include ('../partials/head.ejs') %>
<body>
    <%-include ('../partials/nav.ejs') %>

    <div class="Blog content">
        <h1>Blog Content</h1>
        <% if(blogs.length>0){ %>
            <% blogs.forEach(blog=>{%>
                <a href="/blogs/<%=blog.id%>">
                <h4><%= blog.title %></h4>
                <p><%= blog.snippet %></p>
                </a>
            <% }) %>
        <%}else { %>
            <h1>There is no blog added</h1>
        <%}%>
        
    </div>
    
    <%-include ('../partials/footer.ejs') %>
</body>
</html>